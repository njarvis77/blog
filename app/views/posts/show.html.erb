<p id="notice"><%= notice %></p>

<h1><span style="color: darkblue;">Posts</span></h1>
<% render @post %>

<h2><span style="color: darkblue;">Comments</span></h2>
<div id="comments">
    <%= render @post.comments.reverse %>
</div>

<%= form_for [@post, Comment.new], remote: true do |f| %>
  <p>
    <ol><%= f.label :body, "New Comment" %><br /></ol>
    <ol><%=f.text_area :body %></ol>
  </p>
  <ol><p><%= f.submit "Add Comment" %></p></ol>
<% end %></span>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
